<h2 style="text-align: {{ section.settings.title_alignment }}">{{ section.settings.title }}</h2>

{% for block in section.blocks  %}
  {% if block.type == "promotion" %}
    <h3>{{ block.settings.title }}</h3>
    {{ block.settings.image | image_url: width: 300, height: 300 | image_tag }}
  {% endif %}
{% endfor %}

{% schema %}
{
  "name": "Promotion Group",
  "settings": [
    {
      "type": "text",
      "label": "Title",
      "id": "title"
    },
    {
      "type": "select",
      "label": "Title Alignment",
      "id": "title_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "promotion",
      "name": "Promotion",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotion Group",
      "category": "Custom"
    }
  ]
}
{% endschema %}




